
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>SensorHub</title>
</head>
<body>

<link href="design.css" rel="stylesheet">


<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <p id="modalText">Some text in the Modal..</p>
  </div>
</div>

<div>
	<h1>SensorHub</h1>
</div>
<pre id="json"></pre>



<form class="border"  method="get" action="connect.cgi" name="numberform" id="formID2">
	<div>
		<b>Brocker IP </b>
		<input required pattern="^([0-9]{1,3}\.){3}[0-9]{1,3}$" name="ip">
	</div>
	<br>
	<div>
		<input type="submit" value="connect to brocker">
	</div>
</form>
<br>


<div class="border">
	<form method="get" action="disconnect.cgi" name="numberform" id="fromID4" style="display: inline;">
		<div>
			<b>Connected to:</b> <!--#IP-->
		</div>
		<br>
			<input type="submit" value="disconnect from brocker">
	</form>
	<button onClick="window.location.reload();">refresh</button>
</div>
<br>



<form class="border" method="get" action="update.cgi" name="numberform" id="formID">
		<input type="checkbox" name="CANTX"><span id="CANTX"><b>CAN Tx</b></span>
		<br>		
		<input type="checkbox" name="CANRX"><span id="CANRX"><b>CAN Rx</b></span>
		<br>	
		<input type="checkbox" name="Voltage1"><span id="Voltage1"><b>Voltage1</b></span>
		<br>
		<input type="checkbox" name="Voltage2"><span id="Voltage2"><b>Voltage2</b></span>
		<br>
		<input type="checkbox" name="Voltage3"><span id="Voltage3"><b>Voltage3</b></span>
		<br>
		<input type="checkbox" name="Temperature1"><span id="Temperature1"><b>Temperature1</b></span>
		<br>
		<input type="checkbox" name="Temperature2"><span id="Temperature2"><b>Temperature2</b></span>
		<br>
		<input type="checkbox" name="Temperature3"><span id="Temperature3"><b>Temperature3</b></span>
		<br>
	</div>
	<br>
	<div>
		<input type="submit" value="submit">
	</div>
</form>
<br>


<script> 
	var modal = document.getElementById("myModal");
	var span = document.getElementsByClassName("close")[0];

	let CANTX = document.getElementById("CANTX")
	let CANRX = document.getElementById("CANRX")
	let Voltage1 = document.getElementById("Voltage1")
	let Voltage2 = document.getElementById("Voltage2")
	let Voltage3 = document.getElementById("Voltage3")
	let Temperature1 = document.getElementById("Temperature1")
	let Temperature2 = document.getElementById("Temperature2")
	let Temperature3 = document.getElementById("Temperature3")

	CANRX.onclick = function(evt){
		modal.style.display = "block"
		document.getElementById("modalText").innerHTML = "CANRX infos"
	}

	CANTX.onclick = function(evt) {
		modal.style.display = "block";
		document.getElementById("modalText").innerHTML = "CANTX infos"
	}

	Voltage1.onclick = function(evt){
		modal.style.display = "block"
		document.getElementById("modalText").innerHTML = "Voltage infos"
	}

	Voltage2.onclick = function(evt){
		modal.style.display = "block"
		document.getElementById("modalText").innerHTML = "Voltage infos"
	}


	Voltage3.onclick = function(evt){
		modal.style.display = "block"
		document.getElementById("modalText").innerHTML = "Voltage infos"
	}


	Temperature1.onclick = function(evt){
		modal.style.display = "block"
		document.getElementById("modalText").innerHTML = "Voltage infos"
	}

	Temperature2.onclick = function(evt){
		modal.style.display = "block"
		document.getElementById("modalText").innerHTML = "Voltage infos"
	}

	Temperature3.onclick = function(evt){
		modal.style.display = "block"
		document.getElementById("modalText").innerHTML = "Voltage infos"
	}

	span.onclick = function() {
		modal.style.display = "none";
	}


</script>


</body>
</html>

